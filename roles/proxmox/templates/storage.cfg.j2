dir: local
    path /var/lib/vz
    content iso,vztmpl,backup

lvmthin: local-lvm
    thinpool data
    vgname pve
    content rootdir,images

{% for volume in proxmox_mount_volumes %}
glusterfs: {{ volume.id }}
        server {{ volume.server1 }}
        server2 {{ volume.server2 }}
        volume {{ volume.name }}
        content images,iso
{% endfor %}
