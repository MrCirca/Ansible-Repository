---
lvm_volume_groups:
  gluster_vg_0:
    physical_volumes:
      - /dev/vdb

lvm_logical_volumes:
  glusterfs_storage:
    vg: gluster_vg_0
    size: 10G



#Glusterfs brick's directories
bricks_directory:
  brick_0:
   path: /mnt/bricks_directory/brick_0

filesystems:
  - device: /dev/gluster_vg_0/glusterfs_storage
    mountpoint: /mnt/bricks_directory/brick_0
    fs: ext4

